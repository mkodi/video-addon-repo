<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="video.plugin.repo" name="Video Plugin Repo" version="1.0.1" provider-name="MK">
    <extension point="xbmc.addon.repository" name="Video Plugin Repo">
        <dir>
            <info compressed="false">https://raw.githubusercontent.com/mkodi/video-plugin-repo/master/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/mkodi/video-plugin-repo/master/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/mkodi/video-plugin-repo/master/</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Vide Plugin Repo</summary>
        <description>Repo for video plugin addons</description>
        <disclaimer></disclaimer>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>

<addon id="plugin.video.livetv"
       version="1.0.3"
       name="Live TV Kodi Video Plugin"
       provider-name="MK">
    <requires>
        <import addon="xbmc.python" version="2.7.18"/>
        <import addon="script.module.requests"/>
        <import addon="script.module.livestreamer" optional="true"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="main.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Live TV Kodi Video Plugin</summary>
        <description lang="en">Video plugin for Kodi mediacenter.</description>
        <disclaimer lang="en">Free streaming videos are provided by klani im.</disclaimer>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
</addons>
